# MongoDB connection string (preferred)
MONGODB_URI=mongodb://localhost:27017/crypto
# Alternative: DATABASE_URL can also be used
# DATABASE_URL=mongodb://localhost:27017/crypto

# Or use individual MongoDB settings:
# MONGODB_HOST=localhost:27017
# MONGODB_DATABASE=crypto

# OpenExchangeRates API key
# Get your free API key at https://openexchangerates.org/signup/free
OPENEXCHANGERATES_API_KEY=your_api_key_here

# Node environment (development or production)
NODE_ENV=development

# Port (optional, defaults to 3000)
PORT=3000